<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="user"
            type="com.idtkb.trykotlin.model.User" />
        <variable name="activity" type="com.idtkb.trykotlin.Fragment2" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.idtkb.trykotlin.Fragment2" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment2_title" />

        <Button
            android:id="@+id/fragment1Button"
            android:text="@string/fragment1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{activity::send}" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<TextView android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@{user.firstName}"/>-->

        <!--<TextView android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@{user.lastName}"/>-->

    </LinearLayout>
</layout>